@model List<Product>
@{
    ViewData["Title"] = "Loja";
}

<!-- Início da seção do cabeçalho -->
<section class="breadcrumb-section set-bg" data-setbg="../img/breadcrumb-bg3.jpeg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Nossos Produtos</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<!-- Fim da seção do cabeçalho -->

<!-- Início da seção de produtos -->
    <section class="classes-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Nossos Produtos</span>
                        <h2>O QUE PODEMOS OFERERCER</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <section class="produtos">
        @foreach (var product in Model)
        {
                <div class="produto">
                    <img src="@product.Image" alt="">
                    <h3 class="h3l">@product.Name</h3>
                    <p class="pl">@product.Price</p>
                    <button class="comprar-btn" onclick="comprarProduto('https://api.whatsapp.com/send/?phone=5514998948829&text&type=phone_number&app_absent=0')">COMPRAR</button>
                </div>
        }
    </section>
    <script>
        function comprarProduto(numero) {
            window.location.href = numero;
        }
    </script>

<!-- Fim da Seção de produtos -->