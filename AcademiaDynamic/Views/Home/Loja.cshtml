@model List<Product>
@{
    ViewData["Title"] = "Loja";
}

<!-- Início da seção do cabeçalho -->
<section class="hero-section">
    <div class="hs-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="../img/breadcrumb-bg3.jpeg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 offset-lg-6">
                        <div class="hi-text">
                            <h1 class="tl"> NOSSOS <strong> PRODUTOS </strong></h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Fim da seção do cabeçalho -->

<!-- Início da seção de produtos -->
    <section class="classes-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Nossos Produtos</span>
                        <h2>O QUE PODEMOS OFERECER</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
<section class="produtos">
    @foreach (var product in Model)
    {
        <div class="produto">
            <img src="@product.Image" alt="">
            <h3 class="h3l">@product.Name</h3>
            <p class="pl">@product.Price</p>
            <button class="comprar-btn" onclick="comprarProduto('https://api.whatsapp.com/send/?phone=5514998948829&text')">COMPRAR</button>
        </div>
    }
</section>
<script>
    function comprarProduto(numero) {
        window.open(numero, '_blank');
    }
</script>


<!-- Fim da Seção de produtos -->